@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager


<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <span class="nav-link text-dark">Hola, @User.Identity.Name</span>
        </li>   
        <li class="nav-item">
            <form class="form-inline" asp-action="Logout" asp-controller="Usuarios">
                <button type="submit" class="nav-link btn btn-link text-dark">
                    Cerrar Sesión
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" 
            asp-action="Registro" asp-controller="Usuarios">Registrarse</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark"
               asp-action="Login" asp-controller="Usuarios">Iniciar Sesión</a>
        </li>
    }
</ul>

