@model Categoria

@{
	ViewData["Title"] = "Crear Categoria";
}

<h1>@ViewData["Title"]</h1>
<h5>La Categoria permite indicar en que gasta su dinero y de donde provienen sus ingresos</h5>

<form asp-action="Crear">
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>

	<div class="mb-3">
		<label asp-for="Nombre" class="col-form-label"></label>
		<input asp-for="Nombre" class="form-control"/>
		<span asp-validation-for="Nombre" class="text-danger"></span>
	</div>

	<div class="mb-3">
		<label asp-for="TipoTransaccionId" class="col-form-label"></label>
		<select asp-for="TipoTransaccionId" class="form-select" asp-items="Html.GetEnumSelectList<TipoTransaccion>()"></select>
		<span asp-validation-for="TipoTransaccionId" class="text-danger"></span>
	</div>

	<button class="btn btn-primary">Guardar</button>
	<a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>