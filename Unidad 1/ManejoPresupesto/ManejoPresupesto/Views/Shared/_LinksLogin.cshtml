@using Microsoft.AspNetCore.Identity
@inject SignInManager<Usuario> SignInManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <span class="d-inline">
                Hola, @User.Identity.Name
            </span>
        </li>
        <li class="nav-item">
            <form asp-action="Logout" asp-controller="Usuarios" class="form-inline">
                <button type="submit" class="nav-link btn btn-link text-dark"> Cerrar Sesi√≥n</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-action="Registro" asp-controller="Usuarios"></a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-action="Login" asp-controller="Usuarios"></a>
        </li>
    }
</ul>